   "source": [
    "import numpy as np\n",
    "def entropy(p,q):\n",
    "    p = p/(p+q)\n",
    "    q = 1 - p\n",
    "    entropy = -p * np.log2(p) - q * np.log2(q)\n",
    "    return entropy"
   ]
  },
